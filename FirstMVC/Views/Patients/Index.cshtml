@model IEnumerable<FirstMVC.Models.Patients>

@{
    ViewBag.Title = "Index";
}

<h2>All Patients</h2>

We are showing the latest @Model.Count() Patients

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
